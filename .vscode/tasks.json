{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup project",
            "type": "shell",
            "command": "${workspaceFolder}/setup.sh",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
            },
            "group": "none"
        },
        {
            "label": "Build project",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build && cd ${workspaceFolder}/build && cmake .. && make",
            "problemMatcher": [
                "$gcc",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "Run game",
            "type": "shell",
            "command": "source .venv/bin/activate && python3 py/interface/main.py",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
            },
            "group": "none",
            "dependsOn": [
                "Build: Compile Project",
            ],
        },
        {
            "label": "Start training",
            "type": "shell",
            "command": "source .venv/bin/activate && python3 py/training/training.py",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
            },
            "group": "none",
            "dependsOn": [
                "Build: Compile Project",
            ],
        },
        {
            "label": "Clean build files",
            "type": "shell",
            "command": "rm -rf build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
            },
            "group": "none",
        },
    ],
}
